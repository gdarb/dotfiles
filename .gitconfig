[user]
	# set in .gitconfig_local
[include]
	path = "~/.gitconfig_local"
[gpg]
	program = gpg
[commit]
	gpgSign = true
[tag]
	forceSignAnnotated = true
[core]
	editor = vim
	excludesfile = "~/.gitignore_global"
	pager = less -x1,5
[submodule]
	recurse = true
[pull]
	ff = only
[init]
	defaultBranch = main
