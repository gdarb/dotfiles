[user]
	# set in `~/.config/git/config_local`
[include]
	path = "~/.config/git/config_local"
[gpg]
	program = gpg
[commit]
	gpgSign = true
[tag]
	forceSignAnnotated = true
[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[submodule]
	recurse = true
[pull]
	ff = only
[init]
	defaultBranch = main
